{
  "compilerOptions": {
    "target": "ES2020",                          
    "module": "NodeNext",                        
    "rootDir": "src",                         
    "outDir": "dist",                            
    "strict": true,                              
    "esModuleInterop": true,
    "skipLibCheck": true,           
    "moduleResolution": "NodeNext",                
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
